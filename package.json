{
  "name": "task-genie",
  "version": "0.0.0",
  "main": "./electron/app.js",
  "scripts": {
    "ng": "ng",
    "start": "ng build --localize --base-href ./ && electron .",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:bot-frontend": "node dist/bot-frontend/server/server.mjs",
    "lint": "ng lint",
    "prettier": "prettier --write \"src/**/*.{ts,html,css,scss}\"",
    "prettier-check": "prettier --check \"src/**/*.{ts,html,css,scss}\"",
    "build-angular": "ng build --prod",
    "serve-angular": "ng serve",
    "start-serve": "concurrently \"npm run serve-angular\" \"wait-on http://localhost:4200 && electron .\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.3",
    "@angular/cdk": "~18.0.3",
    "@angular/common": "^18.0.3",
    "@angular/compiler": "^18.0.3",
    "@angular/core": "^18.0.3",
    "@angular/forms": "^18.0.3",
    "@angular/material": "~18.0.3",
    "@angular/platform-browser": "^18.0.3",
    "@angular/platform-browser-dynamic": "^18.0.3",
    "@angular/router": "^18.0.3",
    "@ngrx/effects": "^18.0.0",
    "@ngrx/store": "^18.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.4",
    "@angular/cli": "^18.0.4",
    "@angular/compiler-cli": "^18.0.3",
    "@angular/localize": "^18.0.3",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.4.5",
    "wait-on": "^7.2.0"
  }
}
